        <Grid.RowDefinitions>
            <RowDefinition Height="37*" />
            <RowDefinition Height="35*" />
            <RowDefinition Height="47*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="213*" />
            <ColumnDefinition Width="274*" />
        </Grid.ColumnDefinitions>

        <TextBlock FontSize="16" Grid.RowSpan="2">Enter integer number: </TextBlock>
        <TextBox FontSize="16" Grid.Column="1" Name="_textBox" Margin="6,0,0,4" Text="9999997800000121"></TextBox>
        <Button FontSize="16" Grid.Row="2" Name="_button" Click="_buttonClick">Check</Button>
        <TextBlock FontSize="16" Grid.Row="2" Name="_answerBlock" Grid.Column="1" Margin="6,0,0,0"></TextBlock>
        <CheckBox Content="VIP" Grid.Row="1" Height="35" HorizontalAlignment="Left" Name="vipCheckBox" VerticalAlignment="Top" Width="213" />
